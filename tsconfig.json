{
	"compilerOptions": {
		"lib": ["DOM", "ES6", "ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"typeRoots": [
			"node_modules/@types"
		],
		"rootDir": "src/",
		"outDir": "dist/",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": false
	}
}